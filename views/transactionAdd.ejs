<%- include ./partials/header.ejs %>
<body class="gray">
  <%- include ./partials/dashboard-header.ejs %>
  <div class="row">
    <div class="col m6 offset-m3 s12 offset-s12">
      <div class="card">
        <div class="card-content">
          <h4 class="center-align">New Transaction</h4>
          <div class="row">
            <form class="" action="/user/dashboard/transaction/addData" method="post">
              <div class="input-field col s12">
                 <input id="amount" name="amount" type="number" class="validate">
                 <label for="amount">Amount</label>
              </div>
              <div class="input-field col s12">
                 <input id="keterangan" name="keterangan" type="text" class="validate">
                 <label for="keterangan">Information </label>
              </div>
              <div class="input-field col s12">
                <input type="date" class="datepicker" id="date" name="tanggal_transaksi">
                <label for="date">Date </label>
              </div>
              <div class="input-field col s12">
                <select name = "CategoryDiPilih">
                  <% Categorys.forEach(function(ListCategory) { %>
                <option value = '<%=ListCategory.id%>'> <%= ListCategory.nama_category %></option>
                <% }) %>
                </select>
                <label>Select Category</label>
              </div>
              <div class="input-field col s12">
                <button type="submit" class="waves-effect waves-light btn">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
  <script src="javascripts/js.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      $('select').material_select();
    });
    $('.datepicker').pickadate({
       selectMonths: true, // Creates a dropdown to control month
       selectYears: 15 // Creates a dropdown of 15 years to control year
     });
  </script>
</body>
</html>
